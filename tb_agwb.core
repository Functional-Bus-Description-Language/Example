CAPI=2:

name: ::tb_agwb

filesets:
  src:
    files:
      - tb_agwb.vhd
    file_type: vhdlSource-2008
  tb:
    depend:
      - ::agwb_tb
      - ::cosim
    files:
      - tb_agwb.vhd
    file_type: vhdlSource-2008

targets:
  tb_cosim:
    default_tool: ghdl
    toplevel: tb
    tools:
      ghdl:
        run_options: ["--backtrace-severity=warning"]
    filesets:
      - src
      - tb
    hooks:
      pre_run: [tb_cosim]

scripts:
  tb_cosim:
    cmd:
      - ../../../scripts/agwb.sh
